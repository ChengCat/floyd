}

/* print the life board */

func void print_board ([[int]] board) {
	/* for each row */
	for (j in 0 ..< BOARD_HEIGHT) {

		/* print each column position... */
		mutable string row = to_string(j) + "\t"
		for (i in 0 ..< BOARD_WIDTH) {
			row = push_back(row, board[i][j] != 0 ? 120 : 45);
		}
		print(row)
	}
}

